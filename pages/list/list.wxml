<view class="container">
  <view class="page-body">
    <view>
      <button size="mini" type="primary" bindtap="add">新增</button>
    </view>
    <view class="table">
    <view class="tr bg-w">
      <view class="th">id</view>
      <view class="th">姓名</view>
      <view class="th">权限</view>
      <view class="th_2">操作</view>
    </view>
    <block wx:for="{{userList}}" wx:key="{[code]}">
      <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
        <view class="td">{{item.id}}</view>
        <view class="td">{{item.name}}</view>
        <view hidden="false">{{item.password}}</view>
        <view class="td">{{item.role}}</view>
        <view class="td_2">
          <button size="mini" type="primary" data-item="{{item}}" bindtap="edit">修改</button>
          <button size="mini" type="primary" data-item="{{item}}" bindtap="detail">详情</button>
          <button size="mini" type="warn" data-item="{{item}}" bindtap="delete">删除</button>
        </view>
      </view>
      <view class="tr" wx:else>
        <view class="td">{{item.id}}</view>
        <view class="td">{{item.name}}</view>
        <view hidden="false">{{item.password}}</view>
        <view class="td">{{item.role}}</view>
        <view class="td_2">
          <button size="mini" type="primary" data-item="{{item}}" bindtap="edit">修改</button>
          <button size="mini" type="primary" data-item="{{item}}" bindtap="detail">详情</button>
          <button size="mini" type="warn" bindtap="delete">删除</button>
        </view>
      </view>
    </block>
    </view>
  </view>
</view>